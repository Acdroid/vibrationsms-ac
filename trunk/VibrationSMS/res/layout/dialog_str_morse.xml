<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="25dp" android:gravity="center">
	<EditText 
		android:id="@+id/dialog_str_morse_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"></EditText>
		
	<Button
		android:id="@+id/buttonDialog"
		android:text="@string/dialog_str_morse_button"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginTop="25dp"
		android:layout_weight="0.5"
		></Button>
</LinearLayout>